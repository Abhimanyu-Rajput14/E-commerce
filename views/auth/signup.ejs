<% layout('layouts/boilerplate') -%>

<div class="container-fluid d-flex flex-column justify-content-center" style="min-height: calc(100vh - 150px); padding: 20px;">
  <div class="row justify-content-center w-100">
    <div class="col-12 col-md-6 col-lg-5">
      <%- include('../partials/flash') %>

      <!-- Page Title -->
      <h2 class="text-center mb-4">SignUp Page</h2>

      <form method="post" action="/signup" class="p-4 border rounded bg-light shadow-sm">
        <!-- Username Input -->
        <div class="mb-3">
          <label for="username-inp" class="form-label">Username</label>
          <input name="username" type="text" class="form-control" id="username-inp" required>
        </div>

        <!-- Email Input -->
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input name="email" type="email" class="form-control" id="exampleInputEmail1" required>
        </div>

        <!-- Role Selection -->
        <div class="mb-3">
          <label for="role-inp" class="form-label">Role</label>
          <select name="role" id="role-inp" class="form-select form-select-sm" aria-label="Small select example">
            <option selected value="buyer">Buyer</option>
            <option value="seller">Seller</option>
          </select>
        </div>

        <!-- Password Input -->
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input name="password" type="password" class="form-control" id="exampleInputPassword1" required>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary w-100">Submit</button>
      </form>

      <!-- Login Link -->
      <div class="text-center mt-3">
        <p>Already have an account? <a href="/login" class="text-decoration-none">Login</a></p>
      </div>
    </div>
  </div>
</div>

<!-- Minimal CSS for customization -->
<style>
  .container-fluid {
    padding: 0; /* Removes default padding */
  }
  .form-label {
    font-weight: 500;
  }
  form {
    max-width: 400px; /* Set max width for the form */
    margin: 0 auto; /* Center the form */
  }
  h2 {
    margin-bottom: 20px; /* Space between the title and the form */
  }
  @media (max-width: 576px) {
    .container-fluid {
      padding: 15px; /* Adjust padding for smaller screens */
    }
  }
</style>
