<% layout('layouts/boilerplate') -%>

<div class="container-fluid d-flex flex-column justify-content-center" style="min-height: calc(100vh - 150px); padding: 0;">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <h2 class="text-center mb-4">Update Product</h2>
      <form method="post" action="/products/<%= product._id %>?_method=PUT" class="p-4 border rounded bg-light shadow-sm">
        
        <!-- Product Title Input -->
        <div class="mb-3">
          <label for="titleInp" class="form-label">Product Title</label>
          <input name="title" value="<%= product.title %>" type="text" class="form-control" id="titleInp" placeholder="Enter product title" required>
        </div>

        <!-- Price Input -->
        <label for="priceInp" class="form-label">Price</label>
        <div class="col-auto mb-3">
          <div class="input-group">
            <div class="input-group-text">$</div>
            <input name="price" value="<%= product.price %>" type="number" step="0.01" class="form-control" id="priceInp" placeholder="Enter product price" required>
          </div>
        </div>

        <!-- Image Link Input -->
        <div class="mb-3">
          <label for="imageInp" class="form-label">Image Link</label>
          <input name="image" value="<%= product.image %>" type="url" class="form-control" id="imageInp" placeholder="Enter image URL" required>
        </div>

        <!-- Description Input -->
        <div class="mb-3">
          <label for="descInp" class="form-label">Description</label>
          <textarea name="description" class="form-control" id="descInp" rows="4" placeholder="Enter product description" required><%= product.description %></textarea>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary w-100">Save Data</button>
      </form>
    </div>
  </div>
</div>

<!-- Minimal CSS for customization -->
<style>
  .container-fluid {
    padding: 0; /* Remove all padding */
  }
  .row {
    margin-top: 0; /* Remove top margin from the row */
  }
  h2 {
    margin-bottom: 20px; /* Maintain space below the title */
  }
  form {
    max-width: 500px; /* Set max width for the form */
    margin: 0 auto; /* Center the form */
  }
</style>
